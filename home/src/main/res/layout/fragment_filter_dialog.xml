<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/style_dialog"
    tools:context=".ui.FilterDialogFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/cancel_bt"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_shape_violet"
        android:src="@drawable/ic_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/filter_tv"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/filter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Filter options"
        android:fontFamily="@font/mark_pro"
        android:textSize="20sp"
        android:textColor="@color/violet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancel_bt"
        app:layout_constraintEnd_toStartOf="@id/ok_bt"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok_bt"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_shape_orange"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/mark_pro"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/filter_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/brand_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Brand"
        android:fontFamily="@font/mark_pro"
        android:textSize="20sp"
        android:textColor="@color/violet"
        app:layout_constraintStart_toStartOf="@id/cancel_bt"
        app:layout_constraintTop_toBottomOf="@id/cancel_bt"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/brand_sp"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/brand_tv"
        app:layout_constraintStart_toStartOf="@id/cancel_bt"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Price"
        android:fontFamily="@font/mark_pro"
        android:textSize="20sp"
        android:textColor="@color/violet"
        app:layout_constraintStart_toStartOf="@id/cancel_bt"
        app:layout_constraintTop_toBottomOf="@id/brand_sp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/price_sp"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/price_tv"
        app:layout_constraintStart_toStartOf="@id/cancel_bt"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Size"
        android:fontFamily="@font/mark_pro"
        android:textSize="20sp"
        android:textColor="@color/violet"
        app:layout_constraintStart_toStartOf="@id/cancel_bt"
        app:layout_constraintTop_toBottomOf="@id/price_sp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/size_sp"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintTop_toBottomOf="@id/size_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/cancel_bt"/>


</androidx.constraintlayout.widget.ConstraintLayout>